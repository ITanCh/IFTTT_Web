<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="PO.UserInfoPO" table="user">
      <id name="uid" type="integer">
          <column name="uid"/>
          <generator class="identity"/>
      </id>
      <property name="username" type="string">
          <column name="username" length="30" not-null="true"/>
      </property>
      <property name="password" type="string">
          <column name="password" length="32" not-null="true"/>
      </property>
      <property name="mail" type="string">
          <column name="mail" length="50" not-null="false"/>
      </property>
      <property name="coins" type="long">
          <column name="coins" not-null="true" />
      </property>
      <property name="level" type="integer">
          <column name="level" not-null="true" />
      </property>
      <property name="admin" type="boolean">
          <column name="admin" length="1" not-null="false" />
      </property>
      <!--一对多映射user到task，单的一方配置-->
      <set name="task" table="task" cascade="all-delete-orphan" lazy="false" order-by="ctime desc">
          <key column="uid"/>
          <one-to-many class="PO.TaskPO"/>
      </set>
      <!--一对多映射user到log，单的一方配置-->
      <set name="log" table="log" lazy="false" order-by="lid desc">
          <key column="uid"/>
          <one-to-many class="PO.LogPO"/>
      </set>
      <!--一对多映射user到sms，单的一方配置-->
      <set name="sms" table="sms" cascade="all-delete-orphan" lazy="false" order-by="sid desc">
          <key column="uid"/>
          <one-to-many class="PO.SMSPO"/>
      </set>
  </class>
</hibernate-mapping>
